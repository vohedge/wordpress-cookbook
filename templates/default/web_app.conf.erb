<VirtualHost *:80>

  ServerName <%= @params[:server_name] %>
  DocumentRoot <%= @params[:docroot] %>

  ErrorLog "<%= node[:apache][:log_dir] %>/<%= @params[:server_name] %>_error_log"
  CustomLog "<%= node[:apache][:log_dir] %>/<%= @params[:server_name] %>_error_log" combined

  <Directory <%= @params[:docroot] %>>
    Options <%= @params[:directory_options] %>
    AllowOverride <%= @params[:allow_override] %>
    Order allow,deny
    Allow from all
  </Directory>

</VirtualHost>

